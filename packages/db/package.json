{
  "name": "@repo/db",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./schemas/*": "./src/db/schemas/*.ts",
    "./validators/*": "./src/db/validators/*.ts"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:mysql": "docker exec -it ahianeo-mysql mysql -u user -p ahianeo",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "mysql2": "^3.14.3",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  }
}
